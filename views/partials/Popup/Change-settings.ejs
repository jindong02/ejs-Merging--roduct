<div class="popup-dialog" style="max-width:none;">
    <div class="rounded px-4 py-4 my-4">
       <form action="/change-conversation-settings/<%=selectedConversation.id%>" method="POST">

        <h5 class="mb-4">Conversation Settings</h5>


          <% if (authuser.id !== selectedConversation.users[1].userId && selectedConversation.settings.conversationPassword) { %>
            <div>
            <div title="You cant change those Settings in a Hidden Conversation">
              <div class="d-flex align-items-center mt-2 opacity-70" style="pointer-events: none;">
                  <input class="form-check-input m-0" type="checkbox" name="includeTimestamps" id="includeTimestamps"
                  <% if (selectedConversation.settings.includeTimestamps) { %>
                      checked
                  <% } %>
                  />
                  <label class="form-check-label px-2" for="includeTimestamps">Record Timestamp</label>
               </div>
               
               <div class="d-flex align-items-center mt-2 opacity-70" style="pointer-events: none;">
                  <input class="form-check-input m-0" type="checkbox" name="messageView" id="messageView" 
                  <% if (selectedConversation.settings.messageView) { %>
                      checked
                  <% } %>
                  />
                  <label class="form-check-label px-2" for="messageView">Record if seeing message</label>
               </div>
               
               <div class="d-flex align-items-center mt-2 opacity-70" style="pointer-events: none;">
                  <input class="form-check-input m-0" type="checkbox" name="deleteEmpty" id="deleteEmpty"
                  <% if (selectedConversation.settings.deleteEmpty) { %>
                      checked
                  <% } %>
                  />
                  <label class="form-check-label px-2" for="deleteEmpty">Delete Conversation, if there is not more message</label>
               </div> 

              </div>

              <div class="mt-3">
                  <label for="select-input" class="form-label">Delete Inactive Conversation After:</label>
                  <select name="convoExpiryDate" class="form-select mt-1" id="select-input">
                    <option value="3"
                    <% if (selectedConversation.settings.daysUntilExpiring === 3) { %>
                        selected
                    <% } %>
                    >3 days</option> 
                    <option value="7"
                    <% if (selectedConversation.settings.daysUntilExpiring === 7) { %>
                        selected
                    <% } %>
                    >1 weeks</option> 
                    <option value="30"
                    <% if (selectedConversation.settings.daysUntilExpiring === 30) { %>
                        selected
                    <% } %>
                    >≈ 1 month (30days)</option>
                    <option value="180"
                    <% if (selectedConversation.settings.daysUntilExpiring === 180) { %>
                      selected
                  <% } %>
                  >≈ 6 months (180days)</option>
                  <option value="365"
                  <% if (selectedConversation.settings.daysUntilExpiring === 365) { %>
                    selected
                <% } %>
                > 1 years (365days)</option>
                  </select>
                  <div class="d-flex">
                    <p class="ms-auto"><a class="fs-xs" href="/docs/style-text">Learn More</a></p>
                  </div>
                </div>
              </div>
          <% } else if (authuser.id === selectedConversation.users[0].userId && !selectedConversation.settings.conversationPassword) { %>
            <div>
            <div class="d-flex align-items-center mt-2">
              <input class="form-check-input m-0" type="checkbox" name="includeTimestamps" id="includeTimestamps"
              <% if (selectedConversation.settings.includeTimestamps) { %>
                  checked
              <% } %>
              />
              <label class="form-check-label px-2" for="includeTimestamps">Record Timestamp</label>
           </div>
           
           <div class="d-flex align-items-center mt-2">
              <input class="form-check-input m-0" type="checkbox" name="messageView" id="messageView" 
              <% if (selectedConversation.settings.messageView) { %>
                  checked
              <% } %>
              />
              <label class="form-check-label px-2" for="messageView">Record if seeing message</label>
           </div>
           
           <div class="d-flex align-items-center mt-2">
              <input class="form-check-input m-0" type="checkbox" name="deleteEmpty" id="deleteEmpty"
              <% if (selectedConversation.settings.deleteEmpty) { %>
                  checked
              <% } %>
              />
              <label class="form-check-label px-2" for="deleteEmpty">Delete Conversation, if there is not more message</label>
           </div>

           <div class="mt-3">
              <label for="select-input" class="form-label">Delete Inactive Conversation After:</label>
              <select name="convoExpiryDate" class="form-select mt-1" id="select-input">
                <option value=""
                <% if (!selectedConversation.settings.daysUntilExpiring) { %>
                   selected
                <% } %>
                >Never</option> 
                <option value="3"
                <% if (selectedConversation.settings.daysUntilExpiring === 3) { %>
                    selected
                <% } %>
                >3 days</option> 
                <option value="7"
                <% if (selectedConversation.settings.daysUntilExpiring === 7) { %>
                    selected
                <% } %>
                >1 weeks</option> 
                <option value="30"
                <% if (selectedConversation.settings.daysUntilExpiring === 30) { %>
                    selected
                <% } %>
                >≈ 1 month (30days)</option>
                <option value="180"
                <% if (selectedConversation.settings.daysUntilExpiring === 180) { %>
                  selected
              <% } %>
              >≈ 6 months (180days)</option>
              <option value="365"
              <% if (selectedConversation.settings.daysUntilExpiring === 365) { %>
                selected
            <% } %>
            > 1 years (365days)</option>
              </select>
              <div class="d-flex">
                <p class="ms-auto"><a class="fs-xs" href="/docs/style-text">Learn More</a></p>
              </div>
            </div>
          </div>
          <% } else { %> 
            <div title="You dont have the permission to change theses Settings">
              <div class="d-flex align-items-center mt-2 opacity-70" style="pointer-events: none;">
                  <input class="form-check-input m-0" type="checkbox" name="" id="includeTimestamps"
                  <% if (selectedConversation.settings.includeTimestamps) { %>
                      checked
                  <% } %>
                  />
                  <label class="form-check-label px-2" for="includeTimestamps">Record Timestamp</label>
               </div>
               
               <div class="d-flex align-items-center mt-2 opacity-70" style="pointer-events: none;">
                  <input class="form-check-input m-0" type="checkbox" name="" id="messageView" 
                  <% if (selectedConversation.settings.messageView) { %>
                      checked
                  <% } %>
                  />
                  <label class="form-check-label px-2" for="messageView">Record if seeing message</label>
               </div>
               
               <div class="d-flex align-items-center mt-2 opacity-70" style="pointer-events: none;">
                  <input class="form-check-input m-0" type="checkbox" name="" id="deleteEmpty"
                  <% if (selectedConversation.settings.deleteEmpty) { %>
                      checked
                  <% } %>
                  />
                  <label class="form-check-label px-2" for="deleteEmpty">Delete Conversation, if there is not more message</label>
               </div> 



              <div class="mt-3 opacity-70" style="pointer-events: none;">
                  <label for="select-input" class="form-label">Delete Inactive Conversation After:</label>
                  <select name="" class="form-select mt-1" id="select-input">
                    <option value=""
                    <% if (!selectedConversation.settings.daysUntilExpiring) { %>
                       selected
                    <% } %>
                    >Never</option> 
                    <option value="3"
                    <% if (selectedConversation.settings.daysUntilExpiring === 3) { %>
                        selected
                    <% } %>
                    >3 days</option> 
                    <option value="7"
                    <% if (selectedConversation.settings.daysUntilExpiring === 7) { %>
                        selected
                    <% } %>
                    >1 weeks</option> 
                    <option value="30"
                    <% if (selectedConversation.settings.daysUntilExpiring === 30) { %>
                        selected
                    <% } %>
                    >≈ 1 month (30days)</option>
                    <option value="180"
                    <% if (selectedConversation.settings.daysUntilExpiring === 180) { %>
                      selected
                  <% } %>
                  >≈ 6 months (180days)</option>
                  <option value="365"
                  <% if (selectedConversation.settings.daysUntilExpiring === 365) { %>
                    selected
                <% } %>
                > 1 years (365days)</option>
                  </select>
                  <div class="d-flex">
                    <p class="ms-auto"><a class="fs-xs" href="/docs/style-text">Learn More</a></p>
                  </div>
                </div>
                
              </div>
          <% } %>


          <div class="text-center mb-4">
            <a href="/user/conversation/change-user-conversation-settings/<%=selectedConversation.id%>" class="fs-sm w-100">Want to change your settings for this conversation ?</a>
           </div>


             <div class="d-flex">
              <% if (authuser.id !== selectedConversation.users[1].userId ) { %>
                <button type="submit" class="confirm-button btn btn-primary">Change</button>
              <% } %>
       </form>
       <label for="<%=CHECKBOX_ID%>" class="btn btn-danger cancel-button ms-auto">Cancel</label>
    </div>

    </div>
    <label for="<%=CHECKBOX_ID%>" class="popup-close"></label>
 </div>