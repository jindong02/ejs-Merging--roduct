<%- include('../../Partials/Statics/Head', {page: '- Generate Account'}) %>
  <!-- Body -->
  <body>
    <%- include('../../Partials/Statics/Navbar') %>

    <!-- Page wrapper for sticky footer -->
    <!-- Wraps everything except footer to push footer to the bottom of the page if there is little content -->
    <main class="page-wrapper d-grid" style="place-content: center;">

      <!-- Page content -->
      <section class="position-relative h-100 pt-5 pb-4">

        <%- include('../../Partials/components/flashMessages') %>

        <!-- Sign in form -->
        <div class="container generate-account-container d-flex flex-wrap justify-content-center justify-content-xl-start h-100 pt-5 p-5">
          <div class="w-100 card card-deep-shadow align-self-end p-5" style="max-width: 526px;">
            <h1 class="text-center text-xl-center">Generate an Account</h1>
            <p class="text-center pb-3 mb-3">Want a regular Account ?<a class="ms-1" href="/register">Register here.</a></p>
            <form class="needs-validation mb-2" action="generate-account" method="POST">

            <hr class="mb-3 mt-1">

            <div>
              <p class="fs-sm mb-2">Do you want to choose your default Password ?</p>
              <input class="form-check-input" type="radio" name="passwordSettings" id="generate-password" value="generate-password" required checked/>
              <label class="form-check-label ms-2" for="generate-password">Generate Me a Strong Password<span class="opacity-70 ms-2">(Best Choice)</span></label>
            <br />
        
              <input class="form-check-input" type="radio" name="passwordSettings" id="choose-password" value="choose-password" required />
              <label class="form-check-label ms-2" for="choose-password">I want to choose my own Password</label><br />
           
           
              <div class="position-relative choose-password-content mt-1">
                <label for="password" class="form-label fs-base" maxlength="200">Password</label>
                <input type="password" id="password" name="password" class="form-control form-control-lg" placeholder="Enter your Password">
              </div>
           
            </div>

            <hr class="my-3">

              <button type="submit" class="btn btn-primary shadow-primary btn-lg w-100 mb-0">Generate Account</button>    
              <p class="fs-xs opacity-70 mt-2 mb-0"><b>Note:</b> If you plan on keeping this account, you might want to change the Inactivity Settings after login in.</p>
            </form>
          </div>
        </div>
        
     </section>
    </main>

  </body>
</html>